{
  "name": "faultier",
  "version": "1.1.1",
  "description": "Extensible error handling for TypeScript",
  "keywords": [
    "bun",
    "library",
    "template"
  ],
  "homepage": "https://github.com/adelrodriguez/faultier#readme",
  "bugs": {
    "url": "https://github.com/adelrodriguez/faultier/issues"
  },
  "license": "MIT",
  "author": "Adel Rodr√≠guez",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/adelrodriguez/faultier.git"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./extend": {
      "types": "./dist/extend.d.ts",
      "import": "./dist/extend.js"
    }
  },
  "scripts": {
    "analyze": "adamantite analyze",
    "build": "bunup",
    "bump:deps": "bun update --interactive",
    "check": "adamantite check",
    "dev": "bunup --watch",
    "fix": "adamantite fix",
    "format": "adamantite format",
    "release": "changeset publish --use-npmrc .npmrc",
    "template": "bun run --bun scripts/template.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "typecheck": "adamantite typecheck",
    "version": "changeset version"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "1.3.6",
    "@typescript/native-preview": "7.0.0-dev.20260112.1",
    "adamantite": "^0.27.1",
    "bunup": "0.16.17",
    "knip": "5.80.2",
    "oxfmt": "0.24.0",
    "oxlint": "1.39.0",
    "oxlint-tsgolint": "0.11.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "packageManager": "bun@1.3.1"
}
